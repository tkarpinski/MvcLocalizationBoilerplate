@using MvcLocalizationBoilerplate.Properties;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>

	<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body>

    <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="#">@Resources.ProjectName</a>
          <ul class="nav">
            <li class="active"><a href="#">@Resources.TitleHome</a></li>
            <li><a href="#about">@Resources.TitleAbout</a></li>
            <li><a href="#contact">@Resources.TitleContact</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container">

      <div class="content">
        <div class="page-header">
          <h1>@ViewBag.Title <small>Supporting text or tagline</small></h1>
        </div>
        <div class="row">
          <div class="span14">
            @RenderBody()
          </div>
        </div>
      </div>

      <footer>
        <p>&copy; Company 2011</p>
      </footer>

    </div> <!-- /container -->


</body>
</html>
